<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="JEEProjetPermis">
		<class>metier.Action</class>
		<class>metier.Inscription</class>
		<class>metier.Indicator</class>
		<class>metier.Learner</class>
		<class>metier.Mission</class>	
		<class>metier.InscriptionAction</class>
		<properties>
			<property name="hibernate.diaLect" value="org.hibernate.dialect.MySQLDialect" /> 
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/projetpermis" /> 
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="" /> 
			<property name="eclipselink.ddl-generation" value="none"/>
			<property name="hibernate.show_sql" value="true"/>
			<property name="eclipselink.ddl-generation" value="create-tables"/>
			<property name="eclipselink.ddl-generation.output-mode" value="database" /> 
			<property name="eclipselink.target.database" value="MySQL" />
		</properties>
	</persistence-unit>
</persistence>



		

